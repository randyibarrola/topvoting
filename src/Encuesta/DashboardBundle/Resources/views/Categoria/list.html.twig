    <script src="{{ asset('js/dashboard/table-categoria.js') }}" type="text/javascript"></script>
{% endblock %}
{% block init_javascript %}
    {{ parent() }}
    <script>
        jQuery(document).ready(function() {
            TableAdvanced.init();
            TableCategoria.init();
        });
    </script>
{% endblock %}
{% block page_title %}{{ 'Categorías' | trans }} <small>{{ 'listado' | trans }}</small>{% endblock %}
{% block breadcrumb_list %}
