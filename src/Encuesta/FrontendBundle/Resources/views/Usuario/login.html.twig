{% extends '::base-frontend.html.twig' %}
{% block level_javascript %}
    <script src="{{ asset('js/frontend/jquery/jquery.validate.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/frontend/jquery/jquery.validate-es.js') }}" type="text/javascript"></script>  
{% endblock %}
{% block level_stylesheet  %}    
    <link href="{{ asset('css/frontend/jquery/jquery.validate.css') }}" rel="stylesheet" type="text/css">
{% endblock %}
{% block body %}

        <div id="cuerpo">

            <a title="TheTopVoting.com" href="{{ path('frontend_homepage') }}"><div class="header_reg"></div></a>
            <div id="zona_registro">
                <div id="zona_registro_b1">
                    <div id="zona_registro_b2">
                        <form method="post" action="{{ path('frontend_registro_alta') }}" class="formulario" id="formularioRegistro">
                        <div id="crea_cuenta">
                            <p>{{ 'Crea tu cuenta'|trans }}</p>

                            <label>{{ 'Nombre de usuario' | trans }}:</label></br>
                            {{ form_widget(form.username, { 'attr': {'title': 'Nombre de usuario' | trans} }) }}   
                            
                            </br></br>
                            <label>{{ 'Correo electrónico' | trans }}:</label></br>
                            {{ form_widget(form.email, { 'attr': {'title': 'Correo electrónico' | trans} }) }}   
                            
                            </br></br>
                            <label>{{ 'Contraseña' | trans }}:</label></br>
                            {{ form_widget(form.password, { 'attr': {'title': 'Contraseña' | trans} }) }}   
                                                        </br></br>
                            <div id="cod_post">
                                <label >{{ 'Código postal' | trans }}:</label></br>
                                {{ form_widget(form.codigo_postal, { 'attr': {'title': 'Código postal' | trans} }) }}                                 
                            </div>
                            <div id="sel_pais">
                                <label >{{ 'Selecciona tu país' | trans }}:</label></br>
                                {{ form_widget(form.pais, { 'attr': {'class': 'campo_text cod_postal validate[required]'} }) }}                                
                            </div>   
                            <div class="limpia_float"></div>
                            <div id="chec_aceptar">
                                {{ form_widget(form.acepta_termino) }}           
                                <div id="chec_acepto"><b>{{ 'Sí, acepto'|trans }}</b> {{ 'las condiciones legales y políticas de </br>   
                                    privacidad'}}</div>
                            </div>

                            <input id="btn_reg" name="" type="submit" value="Registrarse"/>
                        </div>
                        {{ form_rest(form) }}
                        </form>

                        <form class="formulario" id="formularioLogin" action="{{ path('frontend_login_check') }}" method="post">
                        <div id="iniciar">
                            <p>{{ 'Inicia sesión' | trans }}</p>

                            <label>{{ 'Escribe tu nombre de usuario' | trans }} :</label></br>
                            <input class="campo_text validate[required]" name="_username" type="text" title="{{ 'Escribe tu nombre de usuario' | trans }}" />
                            </br></br>
                            <label>{{ 'Escribe tu contraseña' | trans }}:</label></br>
                            <input class="campo_text validate[required]" name="_password" type="password" title="{{ 'Escribe tu contraseña' | trans }}" />

                            <div id="chec_record">
                                <input  name="" type="checkbox" value="" /> 
                                <div id="chec_acepto">{{ 'Recordar la sesión' | trans }}</div>
                                <div class="limpia_float"></div>
                                <div id="olvid"><a href="#">{% trans %}¿Has olvidado tu <br>contraseña?{% endtrans%}</a></div>
                            </div>

                            <input id="btn_entrar" name="" type="submit"  value="Entrar"/>
                            <br>
                            {% if error %}
                                <p style="color:red;">Error de usuario o contraseña</p>{{ error }}
                            {% endif %}
                        </div>
                        </form>
                        <div id="design4">DESIGN TEEMSTUDIOS.COM 2014</div>
                    </div>
                </div>
            </div>

        {% if error %}
        {{ error.message }}
       
        {% endif %}
        </div><!-- fin de cuerpo -->

{% endblock %}
